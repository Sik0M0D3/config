#################################
# KEYBOARD BINDINGS FOR ANY TWM #
#################################

#Waldl is a script to search and download wallpapers from wallhaven.cc
ctrl + alt + w
    waldl

#Htop spawn on st
super + h
    st -e htop

#Reload Keybindings daemon (sxhkd)
ctrl + alt + k
    pkill -USR1 -x sxhkd

#Toggle Notifications daemon (dunst)
ctrl + alt + n
    toggle-dunst

#Toggle Compositor (picom)
ctrl + alt + c
    toggle-picom

#Toggle Statusbar (dwmblocks)
ctrl + alt + s
    toggle-dwmblocks

#################################
#       MULTIMEDIA KEYS         #
#################################

#Raises volume
XF86AudioRaiseVolume
    pamixer -i 5 && kill -44 $(pidof dwmblocks) && $( (pidof dunst) && notify-vol || exit 0)

#Lowers volume
XF86AudioLowerVolume
    pamixer -d 5 && kill -44 $(pidof dwmblocks) && $( (pidof dunst) && notify-vol || exit 0)

#Mute
XF86AudioMute
    pamixer -t && kill -44 $(pidof dwmblocks) && $( (pidof dunst) && notify-vol || exit 0)

