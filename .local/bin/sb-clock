#!/bin/sh
[ -f ~/.local/bin/cur_theme ] && . ~/.local/bin/cur_theme

clock=$(date '+%I')

case "$clock" in
  "00") icon="󱑖" ;;
  "01") icon="󱑋" ;;
  "02") icon="󱑌" ;;
  "03") icon="󱑍" ;;
  "04") icon="󱑎" ;;
  "05") icon="󱑏" ;;
  "06") icon="󱑐" ;;
  "07") icon="󱑑" ;;
  "08") icon="󱑒" ;;
  "09") icon="󱑓" ;;
  "10") icon="󱑔" ;;
  "11") icon="󱑕" ;;
  "12") icon="󱑖" ;;
# "00") icon="󱑊" ;;
# "01") icon="󱐿" ;;
# "02") icon="󱑀" ;;
# "03") icon="󱑁" ;;
# "04") icon="󱑂" ;;
# "05") icon="󱑃" ;;
# "06") icon="󱑄" ;;
# "07") icon="󱑅" ;;
# "08") icon="󱑆" ;;
# "09") icon="󱑇" ;;
# "10") icon="󱑈" ;;
# "11") icon="󱑉" ;;
# "12") icon="󱑊" ;;
esac

case $BLOCK_BUTTON in
  3) notify-send " Time/date module
- Right Click to show this Message.
- Left Click + Shift to edit this Module." ;;
  6) setsid -f st -e nvim "$0" ;;
esac

date "+^b$pink^^c$black^ $icon %R " #󰸘 %a %d/%m/%y "
