#!/bin/dash
# Read the PLEASE_README file to know what this ↓ line below is for.
[ -r ~/.local/bin/cur_theme ] && . ~/.local/bin/cur_theme || exit

clock=$(date '+%I')
case "$clock" in
# "00") icon="󱑖" ;;
# "01") icon="󱑋" ;;
# "02") icon="󱑌" ;;
# "03") icon="󱑍" ;;
# "04") icon="󱑎" ;;
# "05") icon="󱑏" ;;
# "06") icon="󱑐" ;;
# "07") icon="󱑑" ;;
# "08") icon="󱑒" ;;
# "09") icon="󱑓" ;;
# "10") icon="󱑔" ;;
# "11") icon="󱑕" ;;
# "12") icon="󱑖" ;;
  "00") icon="󱑊" ;;
  "01") icon="󱐿" ;;
  "02") icon="󱑀" ;;
  "03") icon="󱑁" ;;
  "04") icon="󱑂" ;;
  "05") icon="󱑃" ;;
  "06") icon="󱑄" ;;
  "07") icon="󱑅" ;;
  "08") icon="󱑆" ;;
  "09") icon="󱑇" ;;
  "10") icon="󱑈" ;;
  "11") icon="󱑉" ;;
  "12") icon="󱑊" ;;
esac

case $BLOCK_BUTTON in
  1) pidof dunst > /dev/null && notify-send -t 5000 "$(date "+%A %d %B Of %Y At %R $icon %p")" ;;
  3) pidof dunst > /dev/null && notify-send -t 5000 "󰸘 Time & Date Module:
- Left Click to Show and Update the Date.
- Right Click to Show this Message.
- Left Click + Shift to Edit this Module." ;;
  6) setsid -f st -e nvim "$0" ;;
esac

date "+^c$black^^b$pink^ %R ^d^ ^c$pink^$icon^d^"
