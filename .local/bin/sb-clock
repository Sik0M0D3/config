#!/bin/dash
# Read the PLEASE_README file to know what this ↓ line below is for.
[ -r ~/.local/bin/cur_theme ] && . ~/.local/bin/cur_theme || exit

clock=$(date '+%I')

case "$clock" in
  "00") icon="󱑖" ;;
  "01") icon="󱑋" ;;
  "02") icon="󱑌" ;;
  "03") icon="󱑍" ;;
  "04") icon="󱑎" ;;
  "05") icon="󱑏" ;;
  "06") icon="󱑐" ;;
  "07") icon="󱑑" ;;
  "08") icon="󱑒" ;;
  "09") icon="󱑓" ;;
  "10") icon="󱑔" ;;
  "11") icon="󱑕" ;;
  "12") icon="󱑖" ;;
# "00") icon="󱑊" ;;
# "01") icon="󱐿" ;;
# "02") icon="󱑀" ;;
# "03") icon="󱑁" ;;
# "04") icon="󱑂" ;;
# "05") icon="󱑃" ;;
# "06") icon="󱑄" ;;
# "07") icon="󱑅" ;;
# "08") icon="󱑆" ;;
# "09") icon="󱑇" ;;
# "10") icon="󱑈" ;;
# "11") icon="󱑉" ;;
# "12") icon="󱑊" ;;
esac

case $BLOCK_BUTTON in
  1) notify-send -t 6000 "      The date now is $(date "+%A %d
        %B Of %Y At $clock $icon %p")" ;;
  3) notify-send "󰸘 Time/date module
- Left Click to update the date (if old).
- Right Click to show this Message.
- Left Click + Shift to edit this Script." ;;
  6) setsid -f st -e nvim "$0" ;;
esac

date "+^c$pink^%R $icon" # %d/%m/%y "
