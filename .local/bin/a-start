#!/bin/dash
# Autostart background programs.
# First run one-shot non-persistent programs.
gammastep -x -m randr # Clear old screen temperature just in case.
gammastep -O 4000 -m randr # Then set current screen temperature to 4000.
xwallpaper --zoom ~/Pix/y8o51x.jpg  # And set wallpaper with xwallpaper tool.
# All of the wallpapers that i use are in my Pix repo.

# This function runs a program if it isn't running.
function run { if ! pidof $1 > /dev/null ;then $@& fi }
run picom &  # If not running run picom compositor.
run dunst &  # If not running run dunst notifications daemon.
run sxhkd &  # If not running run sxhkd keybindings daemon.
run dwmblocks &  # If not running run dwmblocks statusbar.
sleep 1 && notify-running &  # Wait 1 second and Notify which programs are running.
